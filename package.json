{
  "name": "@crystal-ball/semantic-release-base",
  "version": "1.2.0",
  "description": "Fellowship shared Semantic Release configs",
  "main": "index.js",
  "keywords": [
    "semantic-release"
  ],
  "contributors": [
    "Dan Hedgecock <hedgecock.d@gmail.com> (https://danhedgecock.com)"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/crystal-ball/semantic-release-base.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "ISC",
  "scripts": {
    "test:unit": "npx jest",
    "test": "npm run lint && npm run test:unit",
    "semantic-release": "semantic-release",
    "lint": "NODE_ENV=test eslint --format=pretty *.js",
    "format": "prettier --write \"*.{js,md}\""
  },
  "dependencies": {
    "@semantic-release/changelog": "3.0.2",
    "@semantic-release/git": "7.0.8",
    "conventional-changelog-eslint": "3.0.1",
    "semantic-release": "15.13.12"
  },
  "devDependencies": {
    "@crystal-ball/commitizen-base": "1.0.0",
    "@crystal-ball/prettier-base": "1.0.0",
    "eslint-config-eloquence": "11.2.0",
    "husky": "2.2.0",
    "jest": "24.8.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-adapter-eslint"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook"
    }
  },
  "prettier": "@crystal-ball/prettier-base",
  "release": {
    "extends": [
      "./index.js"
    ]
  }
}
